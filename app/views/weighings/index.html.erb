<div class="container">
    <div class="row">
      <div class="span9"><%- model_class = Weighing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= link_to t('.new', :default => t("Download Weighings")),
            weighings_path(format: "csv"),
            :class => 'btn btn-primary' %><br /><br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th><%= model_class.human_attribute_name(:duration) %></th>
      <th><%= model_class.human_attribute_name(:session_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
	  <th><%= model_class.human_attribute_name(:time) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @weighings.each do |weighing| %>
      <tr>
        <td><%= weighing.weight %></td>
        <td><%= weighing.duration %></td>
        <td><%= weighing.session_id %></td>
        <td><%= weighing.created_at.to_s.split(" ")[0] %></td>
		<td><%= weighing.created_at.to_s.split(" ")[1] %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_weighing_path(weighing), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      weighing_path(weighing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div></div></div>